{
	"name": "dice-roller-mcp-server",
	"version": "1.0.0",
	"description": "An MCP server that provides dice rolling functionality for tabletop RPG sessions",
	"main": "build/index.js",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"start": "node build/src/index.js",
		"start:stdio": "node build/src/index.js --transport=stdio",
		"start:http": "node build/src/index.js --transport=http",
		"test": "vitest run",
		"test:watch": "vitest",
		"coverage": "vitest run --coverage",
		"test:integration": "vitest run tests/server.test.ts",
		"docker:build": "docker build -t dice-roller-mcp-server .",
		"docker:run": "docker run -p 3000:3000 dice-roller-mcp-server"
	},
	"keywords": [
		"mcp",
		"dice",
		"rpg",
		"tabletop",
		"model-context-protocol"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.10.2",
		"@fastify/cors": "^9.0.1",
		"fastify": "^4.24.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@types/node": "^20.8.2",
		"typescript": "^5.2.2",
		"vitest": "^1.3.1"
	}
}
