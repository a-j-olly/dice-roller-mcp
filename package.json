{
	"name": "dice-roller-mcp",
	"version": "1.2.0",
	"description": "An MCP server that provides dice rolling functionality for tabletop RPG sessions",
	"main": "build/index.js",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"start": "node build/src/index.js",
		"start:stdio": "node build/src/index.js --transport=stdio",
		"start:http": "node build/src/index.js --transport=http",
		"start:http:8080": "node build/src/index.js --http --port=8080",
		"debug": "npx -y @modelcontextprotocol/inspector node build/src/index.js --transport=stdio --debug",
		"help": "node build/src/index.js --help",
		"test": "vitest run tests/unit tests/integration",
		"test:unit": "vitest run tests/unit",
		"test:integration": "vitest run tests/integration",
		"test:docker": "vitest run tests/docker",
		"test:all": "vitest run",
		"test:watch": "vitest tests/unit tests/integration",
		"test:watch:unit": "vitest tests/unit",
		"test:watch:integration": "vitest tests/integration",
		"test:watch:docker": "vitest tests/docker",
		"coverage": "vitest run --coverage tests/unit tests/integration",
		"docker:build": "docker build -t dice-roller-mcp .",
		"docker:run": "docker run -p 3000:3000 dice-roller-mcp",
		"docker:test": "npm run docker:build && npm run test:docker"
	},
	"keywords": [
		"mcp",
		"dice",
		"rpg",
		"tabletop",
		"model-context-protocol"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.10.2",
		"@fastify/cors": "^9.0.1",
		"fastify": "^4.24.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@types/node": "^20.8.2",
		"typescript": "^5.2.2",
		"vitest": "^1.3.1"
	}
}
